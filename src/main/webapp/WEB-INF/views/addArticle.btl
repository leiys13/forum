<!DOCTYPE html>
<html>
<head>
<!-- Standard Meta -->
<meta charset="utf-8" />
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
<meta name="viewport"
	content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

<!-- Site Properties -->
<title>DEMO</title>
<link rel="stylesheet" href="${ctxPath}/css/bootstrap.min.css">
<script src="${ctxPath}/js/jquery-2.1.4.min.js"></script>
<script src="${ctxPath}/js/bootstrap.min.js"></script>

<script>
$(function() {
$("#btn-return").click(function() {
	window.location.href="/article/listArticle";
});
	$("#btn-add").click(function() {
		var title = $("input[name='title']").val();
		var content = $("textarea[name='content']").val();
		if(isEmpty(title) || isEmpty(content)) {
			alert("title or content is null");
			return;
		}
		$.ajax({
		    url:'/article/add',
		    type:'POST', //GET
		    async:true,    //或false,是否异步
		    data:{
		        title:title,content:content
		    },
		    timeout:5000,    //超时时间
		    dataType:'text',    //返回的数据格式：json/xml/html/script/jsonp/text
		    success:function(data,textStatus,jqXHR){
		        console.log(data)
		        alert(data);
		    },
		    error:function(data,xhr,textStatus){
		    }
	    });
	});
});

function isEmpty(val) {
	return val == "";
}

</script>
</head>
<body style="margin-top:20px;">

<form class="form-horizontal" style="width:90%">
	<div>
		<div class="form-group form-group-lg">
	    <label class="col-sm-2 control-label" for="formGroupInputLarge">title</label>
	    <div class="col-sm-10">
	       <input class="form-control" name="title" type="text" id="formGroupInputLarge" placeholder="title">
	    </div>
	  </div>
	  <div class="form-group form-group-lg">
	    <label class="col-sm-2 control-label" for="formGroupInputLarge">content</label>
	    <div class="col-sm-10">
	      <textarea class="form-control" name="content" rows="6" col="10" placeholder="content"></textarea>
	    </div>
	  </div>
	  <div style="margin:auto;text-align: center;">
	  	  <button type="button" class="btn btn-default btn-lg active" id="btn-add">添加</button>
	  	  <button type="button" class="btn btn-default btn-lg active" id="btn-return">返回</button>
	  </div>
	  
	</div>
</form>
</div>
</body>
</html>