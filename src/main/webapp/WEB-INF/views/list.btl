<!DOCTYPE html>
<html>
<head>
<!-- Standard Meta -->
<meta charset="utf-8" />
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
<meta name="viewport"
	content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

<!-- Site Properties -->
<title>DEMO</title>

<link rel="stylesheet" href="${ctxPath}/css/bootstrap.min.css">
<script src="${ctxPath}/js/jquery-2.1.4.min.js"></script>
<script src="${ctxPath}/js/bootstrap.min.js"></script>

<script>
$(function() {
	$("#btn-return").click(function() {
		window.location.href="/article/listArticle";
	});
	
	$("#list-article").click(function() {
		window.location.href="/article/listArticle";
	});
	
	$("#add-article").click(function() {
		window.location.href="/article/addview";
	});
	
});

function view(id) {
	window.location.href="/article/getArticle?id="+id;
}

function remove(id) {
	$.ajax({
		    url:'/article/delete',
		    type:'GET', //GET
		    async:true,    //或false,是否异步
		    data:{
		        id:id
		    },
		    timeout:5000,    //超时时间
		    dataType:'text',    //返回的数据格式：json/xml/html/script/jsonp/text
		    success:function(data,textStatus,jqXHR){
		        alert(data);
		        window.location.href="/article/listArticle";
		    },
		    error:function(data,xhr,textStatus){
		    }
	    });
}

</script>
</head>
<body >

<table class="table table-hover" style="width:90%;margin:auto;margin-top:20px;">
<tr>
<td class="warning" colspan="4"><a onclick="">
<%
for(theme in themes) {
%>
 <a style="margin-right:20px;" href="javascript:alert(1)">${theme}</a>
 <%}%>
 </td>
</tr>
<%
for(item in list) {
%>
	<tr>
		<td class="active" width="20px;"><img src="${ctxPath}/images/applesline.jpg" alt="..." class="img-circle" style="width:30px;height:30px;"/></td>
		<td class="active" width="20px;">${item.commentsNum}/${item.viewNum}</td>
		<td class="active" width="80%;"><span style="background-color:#33CC00;margin：5px;">${item.articleType}</span><a onclick="view(${item.id})">${item.title}</a></td>
		<td class="active"></td>
	</tr>
<%
}
%>
</table>
<div style="margin:auto;text-align: center;">
<button type="button" class="btn btn-default btn-lg active" id="add-article">发帖</button>
<button type="button" class="btn btn-default btn-lg active" id="btn-return">返回</button>
</div>

<div style="margin:auto;text-align: center;">
<nav aria-label="Page navigation">
  <ul class="pagination">
    <li>
      <a href="#" aria-label="Previous">
        <span aria-hidden="true">&laquo;</span>
      </a>
    </li>
    <li><a href="#">1</a></li>
    <li><a href="#">2</a></li>
    <li><a href="#">3</a></li>
    <li><a href="#">4</a></li>
    <li><a href="#">5</a></li>
    <li>
      <a href="#" aria-label="Next">
        <span aria-hidden="true">&raquo;</span>
      </a>
    </li>
  </ul>
</nav>
</div>

</body>
</html>